#creating a list in python
l = [2,4,1,4,9,7,6,5,1,2,3,2,1,5,7,6]
# to get number of elements in the list
len(l)
# to sort the data
sorted(l)
# we can use set to get all unique elements
set(l)
# to sort data in reverse order
sorted(l, reverse=True)
# to get the specified number of elements we can use itertools
import itertools
for i in itertools.islice(l,1,3):print(i)

# to print the numbers using range
for i in range(0,3): print i

# do ranking on the list created and get first few elements

list(itertools.islice(sorted(set(l), reverse=True), 0 , 4))

